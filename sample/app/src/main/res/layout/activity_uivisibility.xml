<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/uivisibility_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <Button
        android:id="@+id/uivisibility_navigationBar_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_transparent" />

    <Button
        android:id="@+id/uivisibility_orientation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_text_toLandscape" />

    <com.zhangwy.widget.recycler.WRecyclerView
        android:id="@+id/uivisibility_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background" />
</LinearLayout>