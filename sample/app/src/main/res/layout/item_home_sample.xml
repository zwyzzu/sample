<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_sample_item_height"
    android:layout_marginTop="1dip"
    android:background="@color/lighter_gray"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/home_sample_id"
        android:layout_width="@dimen/home_sample_item_height"
        android:layout_height="@dimen/home_sample_item_height"
        android:gravity="center"
        android:background="@color/darker_gray"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_2" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_sample_title"
            android:layout_width="match_parent"
            android:layout_height="32dip"
            android:layout_gravity="top"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_3" />

        <TextView
            android:id="@+id/home_sample_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/font_size_5" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_sample_item_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/icon_jump" />
</LinearLayout>
