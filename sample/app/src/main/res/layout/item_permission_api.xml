<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_sample_item_height"
    android:background="@color/lighter_gray">

    <TextView
        android:id="@+id/permission_api_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_sample_item_index"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="@dimen/padding_8"
        android:paddingLeft="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:paddingRight="@dimen/padding_8"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/permission_api_desc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="@dimen/padding_8"
        android:paddingLeft="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:paddingRight="@dimen/padding_8"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/font_size_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/permission_api_title" />

</android.support.constraint.ConstraintLayout>
